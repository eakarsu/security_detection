# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nodeguard
POSTGRES_USER=nodeguard

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=NodeGuard2025!Elastic

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# AI Model Configuration
DEFAULT_MODEL=anthropic/claude-3.5-sonnet
FALLBACK_MODEL=openai/gpt-4-turbo
MAX_TOKENS=4096
TEMPERATURE=0.1

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h
ENCRYPTION_KEY=your_encryption_key_here
API_RATE_LIMIT=1000

# Monitoring Configuration
GRAFANA_PASSWORD=admin_password_here
PROMETHEUS_RETENTION=15d

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
API_PORT=3001
PYTHON_API_PORT=8000
FRONTEND_PORT=3000

# External Services
THREAT_INTEL_API_KEY=your_threat_intel_api_key
MITRE_API_ENDPOINT=https://attack.mitre.org/api
VIRUSTOTAL_API_KEY=your_virustotal_api_key

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password
ALERT_EMAIL_FROM=alerts@nodeguard.ai

# Compliance Configuration
GDPR_ENABLED=true
HIPAA_ENABLED=false
SOX_ENABLED=false
AUDIT_RETENTION_DAYS=2555  # 7 years

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
CACHE_TTL=3600
ML_MODEL_CACHE_SIZE=1000
BATCH_SIZE=1000

# Development Configuration
DEBUG=false
ENABLE_SWAGGER=true
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
